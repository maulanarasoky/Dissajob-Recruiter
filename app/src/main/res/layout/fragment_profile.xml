        <View
            android:id="@+id/squareBg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/square_profile_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgBackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toTopOf="@id/imgProfile"
            android:src="@drawable/ic_arrow_back_color_primary_24dp"
            app:layout_constraintEnd_toStartOf="@id/squareBg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecruiterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:fontFamily="@font/firasans_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/imgProfile"
            android:layout_marginTop="@dimen/margin_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/squareBg"
            app:layout_constraintTop_toTopOf="@id/squareBg"
            tools:text="Maulana Rasoky Nasution" />

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@color/softBlack"
            app:layout_constraintBottom_toBottomOf="@id/squareBg"
            app:layout_constraintEnd_toStartOf="@id/squareBg"
            app:layout_constraintStart_toStartOf="@id/squareBg"
            app:layout_constraintTop_toTopOf="@id/squareBg" />

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:fontFamily="@font/firasans_regular"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/imgAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toTopOf="@id/imgProfile"
            tools:text="HRD" />

        <ImageView
            android:id="@+id/imgAddress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:src="@drawable/ic_place_white_24dp"
            app:layout_constraintBottom_toTopOf="@id/imgPhoneNumber"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toBottomOf="@id/tvRole" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:fontFamily="@font/firasans_regular"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgAddress"
            app:layout_constraintTop_toTopOf="@id/imgAddress"
            tools:text="Jl. Telekomunikasi no. 01" />

        <ImageView
            android:id="@+id/imgPhoneNumber"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:src="@drawable/ic_phone_white_24dp"
            app:layout_constraintBottom_toBottomOf="@id/imgProfile"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintTop_toBottomOf="@id/imgAddress" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:fontFamily="@font/firasans_regular"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgPhoneNumber"
            app:layout_constraintTop_toTopOf="@id/imgPhoneNumber"
            tools:text="0821-6004-9893" />

