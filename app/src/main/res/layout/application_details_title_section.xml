<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/margin_16dp"
    android:paddingBottom="@dimen/margin_16dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/half_circle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_random_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgApplicantPicture"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:src="@drawable/ic_image_gray_24dp"
        app:layout_constraintBottom_toTopOf="@id/tvApplicantName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/half_circle" />

    <TextView
        android:id="@+id/tvApplicantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvShowProfile"
        app:layout_constraintEnd_toEndOf="@id/imgApplicantPicture"
        app:layout_constraintStart_toStartOf="@id/imgApplicantPicture"
        app:layout_constraintTop_toBottomOf="@id/imgApplicantPicture"
        tools:text="Maulana Rasoky Nasution" />

    <TextView
        android:id="@+id/tvShowProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_show_profile"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/half_circle"
        app:layout_constraintEnd_toEndOf="@id/tvApplicantName"
        app:layout_constraintStart_toStartOf="@id/tvApplicantName"
        app:layout_constraintTop_toBottomOf="@id/tvApplicantName" />

</androidx.constraintlayout.widget.ConstraintLayout>