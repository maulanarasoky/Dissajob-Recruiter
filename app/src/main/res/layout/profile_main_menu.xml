<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_32dp">

    <ImageView
        android:id="@+id/imgJobMenu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/softBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnJobMenu"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgJobMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgJobMenu" />

    <ImageView
        android:id="@+id/imgApplicantMenu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:src="@color/softBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgJobMenu" />

    <ImageButton
        android:id="@+id/btnApplicantMenu"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgApplicantMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgApplicantMenu" />

    <ImageView
        android:id="@+id/imgSettingsMenu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:src="@color/softBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgApplicantMenu" />

    <ImageButton
        android:id="@+id/btnSettingsMenu"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_profile_menu_btn"
        android:src="@drawable/ic_arrow_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/imgSettingsMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgSettingsMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>