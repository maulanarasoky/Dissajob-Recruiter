<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/margin_16dp">

    <ImageView
        android:id="@+id/imgRecruiter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/firasans_regular"
        android:textColor="@color/softBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgRecruiter"
        app:layout_constraintTop_toTopOf="@id/imgRecruiter"
        tools:text="Job title" />

    <TextView
        android:id="@+id/tvRecruiterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/firasans_regular"
        android:maxLines="1"
        android:textColor="@color/softBlack"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgRecruiter"
        app:layout_constraintTop_toBottomOf="@id/tvJobTitle"
        tools:text="Recruiter Name" />

    <TextView
        android:id="@+id/tvRecruiterAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:fontFamily="@font/firasans_regular"
        android:textColor="@color/softBlack"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgRecruiter"
        app:layout_constraintTop_toBottomOf="@id/tvRecruiterName"
        tools:text="Address" />

    <TextView
        android:id="@+id/tvPostedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:fontFamily="@font/firasans_regular"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgRecruiter"
        app:layout_constraintTop_toBottomOf="@id/tvRecruiterAddress"
        tools:text="15 minutes ago" />

</androidx.constraintlayout.widget.ConstraintLayout>